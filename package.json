{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "predev": "rimraf ./public/_redirects",
    "dev": "remix dev",
    "start": "netlify serve",
    "format": "prettier . --write",
    "commit": "cz",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@netlify/functions": "^1.3.0",
    "@remix-run/css-bundle": "^1.19.1",
    "@remix-run/netlify": "^1.19.1",
    "@remix-run/node": "^1.19.1",
    "@remix-run/react": "^1.19.1",
    "class-variance-authority": "^0.7.0",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.19.1",
    "@remix-run/eslint-config": "^1.19.1",
    "@remix-run/serve": "^1.19.1",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.14",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.27.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.27",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "rimraf": "^4.1.4",
    "tailwindcss": "^3.3.3",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && pnpm cz --hook || true"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config ./.prettierrc.json --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --config ./.prettierrc.json --write"
    ]
  }
}
