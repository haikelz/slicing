{
    "$schema": "https://json.schemastore.org/tsconfig",  
    "display": "Remix.js",
    "extends": "./base.json",  
    "compilerOptions": {
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ES2019"
      ],
      "isolatedModules": true,
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "target": "ES2019",
      "skipLibCheck": true,
      "strict": true,
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true
    },
    "include": ["app"],
    "exclude": ["node_modules"]
}